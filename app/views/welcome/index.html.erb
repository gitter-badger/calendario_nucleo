<p class="title">Calendário de Atividades</p>
<div id="calendar"></div>
<p class="title">Atividades Próximas</p>

<% @events.each do |event| %>

<div class="event">
  <h3><strong>Evento <%= event.id %> </strong></h3>
  <div class="row info">
    <div class="col-xs-3">
      <p>Nome: <%= event.nome %> </p>
    </div>
    <div class="col-xs-2">
      <p>Pilar: <%= event.pilar %> </p>
    </div>
    <div class="col-xs-2">
      <p>Ciclo: <%= event.ciclo %> </p>
    </div>
    <div class="col-xs-2">
      <p>Hora: <%= event.hora_inicio %> <%= event.hora_fim %> </p>
    </div>
    <div class="col-xs-3">
      <p>Local: <%= event.local %> </p>
    </div>
  </div>
  <div class="row description">
    <div class="col-xs-12">
      <p>Descrição: <%= event.descricao %> </p>
    </div>
  </div>
  <div class="row attendee">
    <div class="col-xs-12">
      <p>Quem vai: Pessoas</p>
    </div>
  </div>  
</div>

<% end %>

<%= link_to 'Lista Completa', events_path, class: "btn btn-default" %>
<%= link_to 'Novo Evento', new_event_path, class: "btn btn-default" %>